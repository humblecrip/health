<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chenjiayan.dao.UserDao">
    <sql id="userAll">
        id,birthday,gender,username,password,remark,station,telephone
    </sql>
    <select id="findByUsername" parameterType="string" resultType="com.chenjiayan.pojo.User">
        select <include refid="userAll"></include>
        from t_user
        where username = #{username}
    </select>
</mapper>