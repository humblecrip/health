<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chenjiayan.dao.SetmealDao">

    <resultMap id="baseResultMap" type="com.chenjiayan.pojo.Setmeal">
        <id column="id" property="id"></id>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="helpCode" property="helpCode"/>
        <result column="sex" property="sex"/>
        <result column="age" property="age"/>
        <result column="price" property="price"/>
        <result column="remark" property="remark"/>
        <result column="attention" property="attention"/>
        <result column="img" property="img"/>
    </resultMap>

    <resultMap id="findByIdResultMap" type="com.chenjiayan.pojo.Setmeal" extends="baseResultMap">
        <!--多对多映射-->
        <collection
                property="checkGroups"
                ofType="com.chenjiayan.pojo.CheckGroup"
                select="com.chenjiayan.dao.CheckGroupDao.findCheckGroupById"
                column="id">

        </collection>
    </resultMap>

    <sql id="setMealAll">
        id,code,name,helpCode,sex,remark,attention,age,price,img
    </sql>
    <!--插入套餐数据-->
    <insert id="add" parameterType="com.chenjiayan.pojo.Setmeal">
        /* 通过mybatis框架提供的selectKey标签获得自增产生的ID值 */
        <selectKey resultType="integer" order="AFTER" keyProperty="id">
            select LAST_INSERT_ID()
        </selectKey>
        insert into t_setmeal(code,name,helpCode,sex,remark,attention,age,price,img)
        values (#{code},#{name},#{helpCode},#{sex},#{remark},#{attention},#{age},#{price},#{img})
    </insert>
    <!--设置套餐和检查组多对多关系-->
    <insert id="setSetmealAndCheckGroup" parameterType="map">
        insert into t_setmeal_checkgroup(setmeal_id,checkgroup_id)
        values
            (#{setmealId},#{checkGroupId})
    </insert>
    <select id="findByCondition" resultType="com.chenjiayan.pojo.Setmeal">
        select <include refid="setMealAll"></include>
        from t_setmeal
        <if test="value != null and value != '' and value.length > 0">
            where
            code = #{value} or name like '%' #{value} '%' or helpCode like '%' #{value} '%'
        </if>
    </select>
    <select id="getAll" resultType="com.chenjiayan.pojo.Setmeal">
        select <include refid="setMealAll"></include>
        from t_setmeal
    </select>
    <!--根据套餐ID查询套餐详情，（套餐基本信息，套餐对应的检查组信息，检查组对应的检查项信息）-->
    <select id="findSetMealById" parameterType="integer" resultMap="findByIdResultMap">
        select <include refid="setMealAll"></include>
        from t_setmeal where id = #{id}
    </select>
    <select id="findSetmealCount" resultType="java.util.Map">
        select s.name name,count(s.name) value
        from t_order o,t_setmeal s
        where s.id = o.setmeal_id
        group by s.name
    </select>

</mapper>