<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chenjiayan.dao.CheckGroupDao">
    <resultMap id="baseResultMap" type="com.chenjiayan.pojo.CheckGroup">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="helpCode" property="helpCode"/>
        <result column="sex" property="sex"/>
        <result column="remark" property="remark"/>
        <result column="attention" property="attention"/>
    </resultMap>

    <resultMap id="findByIdResultMap" type="com.chenjiayan.pojo.CheckGroup" extends="baseResultMap">
        <collection
                property="checkItems"
                ofType="com.chenjiayan.pojo.CheckItem"
                select="com.chenjiayan.dao.CheckItemDao.findCheckItemById"
                column="id">
        </collection>
    </resultMap>

    <sql id="checkGroupAll">
        id,code,name,helpCode,sex,remark,attention
    </sql>
    <!--插入检查组数据-->
    <insert id="add" parameterType="com.chenjiayan.pojo.CheckGroup">
        /* 通过mybatis框架提供的selectKey标签获得自增产生的ID值 */
        <selectKey resultType="integer" order="AFTER" keyProperty="id">
            select LAST_INSERT_ID()
        </selectKey>
        insert into t_checkgroup (code,name,helpCode,sex,remark,attention)
        values (#{code},#{name},#{helpCode},#{sex},#{remark},#{attention})
    </insert>
    <!--设置检查组和检查项多对多关系-->
    <insert id="setCheckGroupAndCheckItem" parameterType="map">
        insert into t_checkgroup_checkitem(checkgroup_id,checkitem_id)
        values
        (#{checkGroupId},#{checkItemId})
    </insert>

    <!--根据条件进行查询-->
    <select id="findByCondition" parameterType="string" resultType="com.chenjiayan.pojo.CheckGroup">
        select <include refid="checkGroupAll"></include>
        from t_checkgroup
        <if test="value != null and value != '' and value.length > 0">
            where
            code = #{value} or name like '%' #{value} '%' or helpCode like '%' #{value} '%'
        </if>

    </select>
    <!--根据ID查询-->
    <select id="findById" parameterType="integer" resultType="com.chenjiayan.pojo.CheckGroup">
        select <include refid="checkGroupAll"></include>
        from t_checkgroup
        where id = #{id}
    </select>
    <!--根据检查组ID查询对应的所有检查项，查询中间关系表-->
    <select id="findCheckItemIdsByCheckGroupId" parameterType="integer" resultType="java.lang.Integer">
        select checkitem_id
        from t_checkgroup_checkitem
        where checkgroup_id = #{id}
    </select>

    <!--更新检查组-->
    <update id="edit" parameterType="com.chenjiayan.pojo.CheckGroup">
        update t_checkgroup
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="helpCode != null">
                helpCode = #{helpCode},
            </if>
            <if test="attention != null">
                attention = #{attention},
            </if>
            <if test="remark != null">
                remark = #{remark}
            </if>
        </set>
        where id = #{id}
    </update>
    <!--根据检查组ID删除对应的检查项信息-->
    <delete id="deleteAssociation" parameterType="integer">
        delete
        from t_checkgroup_checkitem
        where checkgroup_id = #{checkGroupId}
    </delete>

    <select id="findAll" resultType="com.chenjiayan.pojo.CheckGroup">
        select <include refid="checkGroupAll"></include>
        from t_checkgroup
    </select>

    <select id="findCheckGroupById" resultMap="findByIdResultMap">
        select <include refid="checkGroupAll"></include>
        from t_checkgroup where id in (
            select checkgroup_id from t_setmeal_checkgroup where setmeal_id = #{id}
        )
    </select>
</mapper>