<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chenjiayan.dao.RoleDao">
    <sql id="roleAll">
        id,name,keyword,description
    </sql>
    <select id="findByUserId" parameterType="integer" resultType="com.chenjiayan.pojo.Role">
        select <include refid="roleAll"></include>
        from t_role r
        INNER JOIN t_user_role ur on r.id = ur.role_id
        where ur.user_id = #{userId}
    </select>
</mapper>